@model GestionActivos.Models.TipoActivo

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Tipos de Activos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CuentaCompra" class="control-label"></label>
                <input asp-for="CuentaCompra" class="form-control" />
                <span asp-validation-for="CuentaCompra" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CuentaDepreciacion" class="control-label"></label>
                <input asp-for="CuentaDepreciacion" class="form-control" />
                <span asp-validation-for="CuentaDepreciacion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="VidaUtil" class="control-label"></label>
                <input asp-for="VidaUtil" class="form-control" type="number" />
                <span asp-validation-for="VidaUtil" class="text-danger"></span>
                <small class="text-muted">Meses de vida útil</small>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Estado" /> @Html.DisplayNameFor(model => model.Estado)
                </label>
            </div>

            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}