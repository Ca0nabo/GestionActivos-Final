@{
    ViewData["Title"] = "Inicio";
}

<style>
    /* Forzamos el fondo con tu imagen (fondo4.jpg) */
    body {
        background: url('/css/fondo4.jpg') no-repeat center center fixed !important;
        background-size: cover !important;
        background-color: #2e7d32 !important; /* Color de respaldo */
    }

    /* Contenedor efecto cristal limpio */
    .container-contenido {
        background-color: rgba(255, 255, 255, 0.7); /* Más transparente (70%) */
        backdrop-filter: blur(8px); /* Efecto borroso detrás */
        -webkit-backdrop-filter: blur(8px);
        border: 1px solid rgba(255, 255, 255, 0.4); /* Borde sutil */

        padding: 50px;
        border-radius: 20px;
        margin-top: 100px;
        box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37); /* Sombra moderna */
        display: inline-block; /* Para que el cuadro se ajuste al tamaño del texto */
    }
</style>

<div class="text-center">
    <div class="container-contenido">
        <h1 class="display-4 text-success fw-bold">Gestión de Activos Fijos</h1>
        <p class="lead text-muted mb-0">Seleccione una opción del menú para comenzar</p>
    </div>
</div>